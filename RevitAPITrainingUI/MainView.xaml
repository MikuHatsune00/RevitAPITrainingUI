<Window x:Class="RevitAPITrainingUI.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAPITrainingUI"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300"
             Title="Идентификатор элемента">
    <StackPanel>
        <Label Content="Количество труб в проекте"
               Margin="5"/>
        <Button Content="Показать" Command="{Binding CommandPipeN}"
                Margin="5"/>
        <Label Content="Объем стен в проекте"
               Margin="5"/>
        <Button Content="Показать" Command="{Binding CommandWallV}"
                Margin="5"/>
        <Label Content="Количество дверей в проекте"
               Margin="5"/>
        <Button Content="Показать" Command="{Binding CommandDoorN}"
                Margin="5"/>
    </StackPanel>
</Window>
